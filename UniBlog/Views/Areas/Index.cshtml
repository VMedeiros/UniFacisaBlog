@model IEnumerable<UniBlog.Models.Area>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AreaID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AreaID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AreaID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
